{
    "name": "codehq-dk/repo-info-composer-plugin",
    "description": "Repository Information Plugin that uses composer to give details about repositories",
    "license": "MIT",
    "minimum-stability": "alpha",
    "require": {
        "php": ">=8.1",
        "codehq-dk/repo-info-contracts": "v0.0.1-alpha",
        "codehq-dk/linux-bash-helper": "v0.0.1-alpha",
        "lcobucci/clock": "^3.0.0"
    },
    "autoload": {
        "psr-4": {
            "CodeHqDk\\RepositoryInformation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CodeHqDk\\RepositoryInformation\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "test": "vendor/bin/phpunit tests/Unit",
        "test-report": "vendor/bin/phpunit tests/Unit --coverage-html tests/CoverageReport"
    }
}
